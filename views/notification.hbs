{{> menu}}

<section class="interface w-100  h-100 " style="margin-left: 300px; position:relative">
    {{> navigation}}




<h1 class="px-2" style="font-weight: 700;margin-top:10%">{{content}}</h1>
{{!-- list of assignment --}}

 <section class="container">
        <div >
            <form class="form form-control my-4"  action="/admin/notification" method="POST">
            
                <div>
                    <label for="name">ASSIGNMENT MESSAGE</label>
                    <textarea type="text" class="form-control"  placeholder="enter your message" name="message"></textarea>
                </div>
               
                <div>
                    <label for="mat">PROGRAM</label>
                    <select class="form-control morneven" name="morneven" id="cars">
                        <option value="MORNING">MORNING</option>
                        <option value="EVENING">EVENING</option>
                      </select>
                </div>
                <div>
                    <label for="mat">LEVEL</label>
                    <select class="form-control level" name="level" id="level">
                        <option value="HND2">HND2</option>
                        <option value="HND1">HND1</option>
                        <option value="ND2">ND2</option>
                        <option value="ND1">ND1</option>
                      </select>
                </div>
                <button type="submit" class="form-control btn-primary btn btns">Click To Submit</button>
            </form>
        </div>
    </section>

    <section class="container">
    {{#each list}}
    <div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{this.morneven}}</h5>
        <h5 class="card-title">{{this.level}}</h5>
        <p class="card-text">{{this.message}}</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
{{/each}}
</section>

    
    


</section> 